.page2{
	width: 100%;
	min-height: 100%;
	background: url('https://www.korjo.cn/xcx/yellowPageImg/bg.jpg') center center fixed no-repeat;
	background-size: cover;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
}
.add_tel{
	position: absolute;
	left: 10%;
	top: 50%;
	transform: translateY(-50%);
	font-size: 40rpx;
}
.tel_list{
	width: 100%;
	min-height: 10%;
	flex-grow: 1;
}
.details_list{
	width: 100%;
	min-height:400rpx;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	padding: 60rpx 0;
	position: relative;
}
.btn_share{
	position: absolute;
	right: 0%;
	top:50%;
	height: 100%;
	transform: translateY(-50%);
	width: 15%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
}
.share{
	padding: 10rpx 0;
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	align-items: center;
	text-align: center;
	background-color: #fff;
	border-top-left-radius: 20rpx;
	border-bottom-left-radius: 20rpx;
}
.share image{
	width: 40%;
}
.share view{
	width: 100%;
	font-size: 30rpx;
}
.btn_details{
	width: 80%;
	height: 2em;
	display: flex;
	justify-content: space-between;
	align-items: center;
	border-bottom: 2rpx solid #ccc;
}
.details_img{
	width: 8%;
}
.details_text{
	width: 84%;
	/*text-align: center;*/
}
.tab_store{
	width: 100%;
}
.top_tab{
	width: 100%;
	display: flex;
	justify-content: space-around;
	align-items: center;
	background-color: #ccc;
	margin: 0 auto;
	border-bottom: 4rpx solid #7f0d27;
}
.tab{
	background-color: #7f0d27;
	color:#fff;
	padding: 6rpx 12rpx;
	font-size: 28rpx;
	border-top-left-radius: 12rpx;
	border-top-right-radius: 12rpx;

}
.tab_choiced{
	background-color: #ccc;
	color:#fff;
	padding: 6rpx 12rpx;
	font-size: 28rpx;
	border-top-left-radius: 12rpx;
	border-top-right-radius: 12rpx;
}
.store_details{
	width: 80%;
	margin: 0 auto;
	word-wrap: break-word;
	white-space: pre-wrap;  
}
.btn_img{
	width: 80%;
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	align-items: center;
	flex-wrap: wrap;
}
.store_img{
	width: 30%;
}