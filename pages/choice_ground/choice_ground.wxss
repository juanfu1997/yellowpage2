	height: 100%;
}
.info_box{
	width: 72%;
	height: 700rpx;
	transform: translateY(10%);
	margin: 0 auto;
	text-align: center;
	border:2rpx solid #7f0d26;
	box-shadow: 5rpx 5rpx 5rpx #888888;
	color:#7f0d26;
	background-color: #ffffff;
	font-size: 30rpx;
	z-index: 3;
}
.info_border{
	position: absolute;
	left: 50%;
	top:50%;
	transform: translateX(-50%) translateY(-50%);
	width: 80%;
}
.info{
	width: 80%;
	margin: 0 auto;
	margin-top: 80rpx;
}
.creat{
	margin: 80rpx auto;
	margin-bottom:60rpx; 
	width: 50%;

}
.info_title{
	height: 80rpx;
	line-height: 80rpx;
}
.write_box{
	width: 80%;
	padding: 20rpx 0;
	border-bottom: 2rpx solid #7f0d26;
	margin: 0 auto;
	display: flex;
	justify-content: space-around;
	align-items: center;
	color: #7f0d26;
}
.write_name{
	/*margin-left:10rpx; */
	flex-shrink: 0;
}
