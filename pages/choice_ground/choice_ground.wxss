.creatGround{
	position: absolute;
	right: 3%;
	top: 10%;
	width: 100rpx;
	height: 100rpx;
	display: flex;
	justify-content: space-around;
	align-items: center;
	flex-direction: column;
	color: #7f0d26;
}
.creatGround image{
	width: 80%;
}
.btn_creat{
	font-size: 16rpx;
}
.demo{
	position: absolute;
	left: 0;
	top: 0;
