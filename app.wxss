.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
image{
	width: 0;
	height: 0;
	display: block;
}
page{
	width: 100%;
	height: 100%;
	color: #7f0d27;
}
.page{
	width: 100%;
	height: 100%;
	/*background: url('https://www.korjo.cn/xcx/yellowPageImg/bg.jpg') center center fixed no-repeat;*/
	background-size: cover;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	position: relative;
}
.demo{
	width: 100%;
	min-height:100%;
	position: absolute;
	left: 0;
	top: 0;
	/*z-index: 1;*/
}
.top_title{
	width: 100%;
	height: 2.8em;
	flex-grow: 0;
	background-color: rgba(128,128,128,0.2);
	position: relative;
}
.top_title:after{
	content: '';
	position: absolute;
	left: 10%;
	top: 0;
	transform: translateX(-50%);
	border-top: 20rpx solid #fff;
	border-bottom: 20rpx solid transparent;
	border-left: 20rpx solid transparent;
	border-right: 20rpx solid transparent;
}
